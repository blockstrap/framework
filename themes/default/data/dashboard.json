{
    "dashboard": {
        "panels": [
            {
                "id": "welcome-message",
                "css": "col-md-12 ribbon",
                "body": {
                    "func": "bootstrap",
                    "type": "jumbotrons",
                    "objects": [
                        {
                            "title": "Welcome back {{user.name}}",
                            "intro": "Here is an overview of your recent accounts and the bitcoin markets.",
                            "html": "Blockstrap is still in beta! Please read out <a href='https://github.com/blockstrap/framework/tree/master/docs/en/applications/wallet/security/'>beta / security disclaimer</a> before getting started",
                            "buttons": [
                                {
                                    "href": "#",
                                    "css": "btn-danger btn-reset",
                                    "text": "Reset Device"
                                },
                                {
                                    "href": "#",
                                    "css": "btn-default",
                                    "text": "Backup",
                                    "attributes": [
                                        {
                                            "key": "data-toggle",
                                            "value": "modal"
                                        },
                                        {
                                            "key": "data-target",
                                            "value": "#backup-modal"
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                }
            },
            {
                "id": "recent-transactions",
                "css": "col-md-6 odd",
                "header": "Recent Transactions",
                "body": {
                    "func": "txs"
                }
            },
            {
                "id": "market-conditions",
                "css": "col-md-6 even",
                "header": "Market Conditions <a href='#' class='pull-right btn btn-sm btn-default btn-markets'>Refresh</a>",
                "body": {
                    "func": "plugin",
                    "name": "markets",
                    "call": "filter",
                    "data": [
                        {
                            "css": "col-sm-6 panel",
                            "id": "price_usd_now"
                        },
                        {
                            "css": "col-sm-6 panel",
                            "id": "tx_count_24hr"
                        },
                        {
                            "css": "col-sm-6 panel",
                            "id": "sent_usd_24hr"
                        },
                        {
                            "css": "col-sm-6 panel",
                            "id": "sent_coins_24hr"
                        },
                        {
                            "css": "col-sm-6 panel",
                            "id": "coins_discovered"
                        },
                        {
                            "css": "col-sm-6 panel",
                            "id": "marketcap"
                        }
                    ]
                }
            }
        ]
    }
}